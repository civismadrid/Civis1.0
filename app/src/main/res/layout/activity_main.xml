<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.10"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonSelectGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.53"
            android:text="GALLERY" />

        <Button
            android:id="@+id/buttonSelectCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="CAMERA"
            android:layout_weight="0.46" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="541dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.10"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="82dp"
            android:layout_height="27dp"
            android:text="ID"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextImageName"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_weight="0.58"
            android:hint="@string/introduzca_id"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="541dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.10"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="82dp"
            android:layout_height="27dp"
            android:text="Title"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_weight="0.58"
            android:hint="@string/introduzca_el_titulo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="541dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.10"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/category"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="@string/seleccione_categor_a"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="187dp"
            android:layout_height="67dp"
            android:layout_weight="0.36"
            android:entries="@array/category_array"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="UPLOAD " />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.17" />


</LinearLayout>
